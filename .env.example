# Merlin Job Application System - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Connection
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/local_Merlin_3
PGPASSWORD=your_postgres_password
DATABASE_NAME=local_Merlin_3
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres

# =============================================================================
# API KEYS & AUTHENTICATION
# =============================================================================

# Webhook API Key (for internal API authentication)
WEBHOOK_API_KEY=your_webhook_api_key_here

# Google Gemini AI
GEMINI_API_KEY=your_google_gemini_api_key

# Apify Job Scraping
APIFY_API_TOKEN=your_apify_token_here

# =============================================================================
# GMAIL INTEGRATION (OAuth 2.0)
# =============================================================================

GMAIL_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your_google_client_secret
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token
GMAIL_USER_EMAIL=your.email@gmail.com

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# Storage backend type: local, s3, gcs
STORAGE_BACKEND=local

# Local filesystem storage path (relative or absolute)
LOCAL_STORAGE_PATH=./storage

# Future cloud storage options:
# S3_BUCKET_NAME=your-s3-bucket
# S3_REGION=us-east-1
# GCS_BUCKET_NAME=your-gcs-bucket
# GCS_PROJECT_ID=your-project-id

# =============================================================================
# APPLICATION SETTINGS

PROJECT_VERSION=4.0.1
# =============================================================================

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_APP=app_modular.py

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/application.log

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Secret key for session management (generate with: python -c 'import secrets; print(secrets.token_hex(32))')
SECRET_KEY=your_secret_key_here

# CORS Settings (comma-separated allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
ENABLE_DOCUMENT_GENERATION=True
ENABLE_EMAIL_SENDING=True
ENABLE_JOB_SCRAPING=True
ENABLE_AI_ANALYSIS=True

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Database automation
AUTO_UPDATE_SCHEMA=False

# Testing
PYTEST_COVERAGE_THRESHOLD=80
