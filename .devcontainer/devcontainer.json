{
  "name": "Merlin Job Application System",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",

  // Features to install
  "features": {
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    }
  },

  // VS Code customizations
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "ms-python.flake8",
        "ms-python.debugpy",
        "donjayamanne.githistory",
        "eamodio.gitlens",
        "github.vscode-pull-request-github",
        "anthropics.claude-code"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.flake8Enabled": true,
        "python.formatting.provider": "black",
        "python.formatting.blackPath": "/usr/local/bin/black",
        "python.testing.pytestEnabled": true,
        "python.testing.unittestEnabled": false,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit"
        },
        "files.exclude": {
          "**/__pycache__": true,
          "**/*.pyc": true,
          ".pytest_cache": true
        },
        // Restrict Claude Code workspace access
        "claude-code.workspacePath": "/workspace"
      }
    }
  },

  // Forward PostgreSQL port for database access
  "forwardPorts": [5000, 5432],
  "portsAttributes": {
    "5000": {
      "label": "Flask App",
      "onAutoForward": "notify"
    },
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "silent"
    }
  },

  // Post-create command to install dependencies
  "postCreateCommand": "pip install --no-cache-dir -r requirements.txt && echo 'âœ… Dev container ready! Run make help for available commands.'",

  // Auto-generated: worktree terminal automation
  "postAttachCommand": {
      "terminal_1": "cd /workspace/.trees/api-rate-limiting-and-request-throttling-protect-e/ && bash .claude-init.sh",
      "terminal_2": "cd /workspace/.trees/automated-backup-and-disaster-recovery-system-data/ && bash .claude-init.sh",
      "terminal_3": "cd /workspace/.trees/centralized-logging-and-observability-system-struc/ && bash .claude-init.sh",
      "terminal_4": "cd /workspace/.trees/comprehensive-system-testing-framework-end-to-end/ && bash .claude-init.sh",
      "terminal_5": "cd /workspace/.trees/copywriter-i-need-claude-to-act-as-copywriter-and/ && bash .claude-init.sh",
      "terminal_6": "cd /workspace/.trees/create-a-worktree-improvements-branch-with-all-the/ && bash .claude-init.sh",
      "terminal_7": "cd /workspace/.trees/dashbaord-completion-the-dashboard-needs-to-integr/ && bash .claude-init.sh",
      "terminal_8": "cd /workspace/.trees/deploymet-need-to-figure-out-how-to-deploy-this-sy/ && bash .claude-init.sh",
      "terminal_9": "cd /workspace/.trees/docx-security-verification-system-prevent-maliciou/ && bash .claude-init.sh",
      "terminal_10": "cd /workspace/.trees/error-handling-and-resilience-system-implement-ret/ && bash .claude-init.sh",
      "terminal_11": "cd /workspace/.trees/git-orchestrator-ive-notied-there-are-git-locks-mu/ && bash .claude-init.sh",
      "terminal_12": "cd /workspace/.trees/job-application-assistant-with-human-in-the-loop-a/ && bash .claude-init.sh",
      "terminal_13": "cd /workspace/.trees/librarian-im-wondering-if-i-need-a-more-active-lib/ && bash .claude-init.sh",
      "terminal_14": "cd /workspace/.trees/link-tracking-analytics-and-insights-track-applica/ && bash .claude-init.sh",
      "terminal_15": "cd /workspace/.trees/real-time-resource-monitoring-dashboard-track-api/ && bash .claude-init.sh",
      "terminal_16": "cd /workspace/.trees/user-preferences-we-need-to-make-sure-the-user-pre/ && bash .claude-init.sh",
      "terminal_17": "cd /workspace/.trees/variable-substitution-system-for-templates-dynamic/ && bash .claude-init.sh"
  }
,

  // Run as non-root user for security
  "remoteUser": "vscode",

  // Mount settings
  "mounts": [
    // Mount SSH keys for GitHub authentication (read-only)
    "source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,readonly",
    // Mount Git config (read-only)
    "source=${localEnv:HOME}/.gitconfig,target=/home/vscode/.gitconfig,type=bind,readonly"
  ],

  // Environment variables
  "containerEnv": {
    "PYTHONUNBUFFERED": "1",
    "FLASK_ENV": "development",
    "DATABASE_HOST": "host.docker.internal",
    "DATABASE_PORT": "5432",
    "DATABASE_NAME": "local_Merlin_3",
    "DATABASE_USER": "postgres",
    "DATABASE_PASSWORD": "goldmember"
  },

  // Run arguments for additional security
  "runArgs": [
    "--network=host",
    "--cap-drop=ALL",
    "--cap-add=NET_BIND_SERVICE",
    "--security-opt=no-new-privileges"
  ]
}
